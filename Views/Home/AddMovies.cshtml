@{
    ViewBag.Title = "Add Movies!";
    ViewBag.Footer = "The Joel Hilton Film Collection.";
}

@model Assignment3.Models.MovieResponse

<!--This is the page that has the form that the user inputs all of the information for the movies. We also have a submit button-->

<form asp-action="AddMovies" method="post">
    <div asp-validation-summary="All"></div>
    <div>
        <label asp-for="Category">Category:</label>
        <input asp-for="Category"/>
    </div>

    <div>
        <label asp-for="Title">Title:</label>
        <input asp-for="Title"/>
    </div>

    <div>
        <label asp-for="Year">Year:</label>
        <input asp-for="Year"/>
    </div>

    <div>
        <label asp-for="Director">Director:</label>
        <input asp-for="Director"/>
    </div>

    <div>
        <label asp-for="Rating">Rating:</label>
        <select asp-for="Rating">
            <option value="">Select One</option>
            <option value="G">G</option>
            <option value="PG">PG</option>
            <option value="PG-13">PG-13</option>
            <option value="R">R</option>
            <option value="NR">NR</option>
            <option value="UR">UR</option>
        </select>
    </div>

    <div>
        <label asp-for="Edited">Edited:</label>
        <select asp-for="Edited">
            <option value="">Select One</option>
            <option value="true">Yes</option>
            <option value="false">No</option>
        </select>
    </div>

    <div>
        <label asp-for="LentTo">Lent To:</label>
        <input asp-for="LentTo"/>
    </div>

    <div>
        <label asp-for="Notes">Notes:</label>
        <input asp-for="Notes"/>
    </div>

    <button type="submit">Submit Your Movie</button>
</form>