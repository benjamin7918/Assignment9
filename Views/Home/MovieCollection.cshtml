@{
    ViewBag.Title = "Movie Collection";
    ViewBag.Footer = "The Joel Hilton Film Collection.";
}

@model IEnumerable<Assignment3.Models.MovieResponse>

<!--This is where I have my header-->
<div>
    <h2>Here are the movies currently entered into the collection</h2>
    <!--This is where I create the table to hold the inputs-->
    <table>
        <thead>
            <tr><th>Category</th><th>Title</th><th>Year</th><th>Director</th><th>Rating</th><th>Edited</th><th>Lent To</th><th>Notes</th></tr>
        </thead>

        <!--This will loop through each of the inputs and enter the information in the correct spot. We also exclude Independence Day (which is a great movie...)-->
        <tbody>
            @foreach (Assignment3.Models.MovieResponse x in Model)
            {
                if (x.Title == "Independence Day") continue;
                else
                {
                <tr>
                    <td>@x.Category</td>
                    <td>@x.Title</td>
                    <td>@x.Year</td>
                    <td>@x.Director</td>
                    <td>@x.Rating</td>
                    <td>@x.Edited</td>
                    <td>@x.LentTo</td>
                    <td>@x.Notes</td>
                </tr>
                }
            }
        </tbody>
    </table>
</div>